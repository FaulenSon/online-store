@model Shop.Models.UserViewModel
    <link rel="stylesheet" href="~/css/nicepage.css" media="screen">
    <link rel="stylesheet" href="~/css/Главная.css" media="screen">
    <script class="u-script" type="text/javascript" src="~/js/jquery.js" defer=""></script>
    <script class="u-script" type="text/javascript" src="~/js/nicepage.js" defer=""></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <div class="row">
        <div class="col-md-3 my-4">
            <div class="list-group ">
                <a asp-action="GetOrders" class="list-group-item list-group-item-action">Заказы</a>
                <a asp-action="GetUsers" class="list-group-item list-group-item-action">Пользователи</a>
                <a asp-action="GetRoles" class="list-group-item list-group-item-action">Роли</a>
                <a asp-action="AddProduct" class="list-group-item list-group-item-action">Добавление товаров</a>
                <a asp-action="DeleteProduct" class="list-group-item list-group-item-action">Удаление товаров</a>
            </div>
        </div>
        <div class="col-md-9 my-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Смена пароля пользователя @Model.Email</h4>
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="ChangeUserPassword">
                                <div asp-validation-summary="All" class="text-danger offset-4 col-8"></div>
                                @*<input type="hidden" asp-for="Email" />
                                    <input type="hidden" asp-for="Name" />*@
                                <div class="form-group row">
                                    <label asp-for="Password" class="col-4 col-form-label">Текущий пароль</label>
                                    <div class="col-8">
                                        <input asp-for="Password" placeholder="Текущий пароль" class="form-control here" type="password" autocomplete="new-password" required>
                                        <span asp-validation-for="Password" class="sr-only"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="NewPassword" class="col-4 col-form-label">Новый пароль</label>
                                    <div class="col-8">
                                        <input asp-for="NewPassword" placeholder="Новый пароль" class="form-control here" type="password" required>
                                        <span asp-validation-for="NewPassword" class="sr-only"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="PasswordConfirm" class="col-4 col-form-label">Подтвердить новый пароль</label>
                                    <div class="col-8">
                                        <input asp-for="PasswordConfirm" placeholder="Подтвердить новый пароль" class="form-control here" type="password" required>
                                        <span asp-validation-for="PasswordConfirm" class="sr-only"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-4 col-8 text-right">
                                        <button name="submit" type="submit" class="btn btn-info">Сохранить</button>
                                    </div>
                                </div>
                            </form>
                            <a class="text-info" asp-action="GetUser" asp-route-id="@Model.Id"><i class="bi bi-arrow-left mr-2 text-info"></i>Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>